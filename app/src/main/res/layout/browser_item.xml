<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="org.gmetais.downloadmanager.HelpersKt" />
        <variable
            name="browser"
            type="org.gmetais.downloadmanager.BrowserAdapter.IHandler" />
        <variable
            name="file"
            type="org.gmetais.downloadmanager.File" />
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="@{(v) -> browser.open(file)}">

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@{file.isDirectory ? @drawable/ic_folder : @drawable/ic_file}"/>
        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:text="@{HelpersKt.getNameFromPath(file.path)}"/>
    </android.support.constraint.ConstraintLayout>
</layout>
