<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="server_url"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/settings_server_url_summary"
        android:title="@string/settings_server_url"
        android:inputType="textFilter|textWebEditText"/>
    <PreferenceCategory android:title="Auth">

        <EditTextPreference
            android:key="username"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/settings_username"
            android:inputType="textFilter|textPersonName"/>
        <EditTextPreference
            android:key="password"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/settings_password"
            android:inputType="textFilter|textPassword"
            android:password="true"
            />
    </PreferenceCategory>
</PreferenceScreen>